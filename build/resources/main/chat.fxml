<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gits.chat.Controller">
   <children>

      <ScrollPane fx:id="chatScrollPane" prefHeight="200.0" prefWidth="200.0" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" fitToHeight="true" fitToWidth="true">
         <content>
            <TextFlow fx:id="chatFlow" prefHeight="200.0" prefWidth="200.0" />

         </content>
      </ScrollPane>
      <TextField fx:id="chatText" onAction="#postMessage" GridPane.rowIndex="4" />

   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
